<resources>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:colorControlHighlight">@color/highlight</item>

        <item name="android:textAppearanceSmall">@style/SmallText</item>
        <item name="android:textAppearanceMedium">@style/MediumText</item>
        <item name="android:textAppearanceLarge">@style/LargeText</item>

        <item name="android:textAppearanceSmallInverse">@style/SmallTextInverse</item>
        <item name="android:textAppearanceMediumInverse">@style/MediumTextInverse</item>
        <item name="android:textAppearanceLargeInverse">@style/LargeTextInverse</item>
    </style>

    <style name="SettingsTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:colorControlHighlight">@color/highlight</item>

        <item name="android:textAppearanceSmall">@style/SmallText</item>
        <item name="android:textAppearanceMedium">@style/MediumText</item>
        <item name="android:textAppearanceLarge">@style/LargeText</item>

        <item name="android:textAppearanceSmallInverse">@style/SmallTextInverse</item>
        <item name="android:textAppearanceMediumInverse">@style/MediumTextInverse</item>
        <item name="android:textAppearanceLargeInverse">@style/LargeTextInverse</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextInverse" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MediumTextInverse" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextInverse" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
