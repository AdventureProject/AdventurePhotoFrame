<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/PERSONALMESSAGE_container"
	tools:context="com.darkrockstudios.iot.adventurephotoframe.PersonalMessageActivity">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/default_margin"
		android:padding="@dimen/default_padding">

		<TextView
			android:id="@+id/PERSONALMESSAGE_recipient"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold"
			tools:text="Mom"/>

		<TextView
			android:id="@+id/PERSONALMESSAGE_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/default_margin"
			app:layout_constraintTop_toBottomOf="@+id/PERSONALMESSAGE_recipient"
			android:textAppearance="?android:attr/textAppearanceLarge"
			tools:text="Message content goes like this Happy Birthday wow this is so great holy moly have a good day byyyeeessssss."/>

		<TextView
			android:id="@+id/PERSONALMESSAGE_author"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/default_margin"
			app:layout_constraintTop_toBottomOf="@+id/PERSONALMESSAGE_content"
			app:layout_constraintEnd_toEndOf="parent"
			android:textAlignment="textEnd"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="italic"
			tools:text="Adam &amp; Stacd"/>
	</android.support.constraint.ConstraintLayout>
</ScrollView>