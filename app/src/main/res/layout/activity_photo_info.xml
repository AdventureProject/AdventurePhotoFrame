<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/PHOTOINFO_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	tools:context="com.darkrockstudios.iot.adventurephotoframe.PhotoInfoActivity">

	<ImageView
		android:id="@+id/PHOTOINFO_map_far"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/PHOTOINFO_map_close"
		app:layout_constraintHorizontal_chainStyle="spread"
		tools:background="#FF555555"/>

	<ImageView
		android:id="@+id/PHOTOINFO_map_close"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		app:layout_constraintHorizontal_weight="1"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/PHOTOINFO_map_far"
		tools:background="#FF111111"/>

	<TextView
		android:id="@+id/PHOTOINFO_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_padding"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center_vertical"
		android:background="@drawable/top_text_fade"
		android:foreground="@drawable/intractable_background"
		android:drawableLeft="@drawable/ic_info"
		android:drawablePadding="@dimen/default_padding"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:text="Photo Title"/>

	<TextView
		android:id="@+id/PHOTOINFO_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_padding"
		android:layout_margin="@dimen/default_margin"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="@color/text_gradient_middle"
		android:foreground="@drawable/intractable_background"
		app:layout_constraintTop_toBottomOf="@+id/PHOTOINFO_title"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:text="Description of the photo can be long and it goes on and on and on and on."/>

	<TextView
		android:id="@+id/PHOTOINFO_date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_padding"
		android:layout_gravity="bottom"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:background="@drawable/bottom_text_fade"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:text="1/12/03"/>

	<ProgressBar
		android:id="@+id/PHOTOINFO_loading"
		style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"/>
</android.support.constraint.ConstraintLayout>
